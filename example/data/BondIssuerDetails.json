{
  "path": "/issuer",
  "schema": {
    "type": "object",
    "title": "Issuer Details",
    "properties": {
      "domicile": {
        "title": "Country of Domicile",
        "type": "string"
      },
      "identifiersList": {
        "title": "Identifiers",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "identifier": {
              "title": "Identifier",
              "type": "string"
            },
            "identifierType": {
              "title": "Identifier Type",
              "type": "string",
              "enum": [
                null,
                "CUSIP6",
                "LEI",
                "Other",
                "Ticker"
              ]
            },
            "otherIdentificationType": {
              "title": "Other Identification Type",
              "type": "string"
            }
          }
        }
      },
      "legalName": {
        "title": "Legal Name",
        "type": "string"
      },
      "LEICode": {
        "title": "LEI Code",
        "type": "string"
      }
    }
  },
  "form": [
    {
      "type": "fieldset",
      "items": [
        "legalName",
        "LEICode",
        "domicile"
      ]
    },
    {
      "type": "fieldset",
      "items": [
        {
          "key": "identifiersList",
          "add": "New Identifier",
          "style": {
            "add": "identifiersList"
          },
          "items": [
            "identifiersList[].identifierType",
            "identifiersList[].identifier",
            "identifiersList[].otherIdentificationType"
          ]
        }
      ]
    }
  ]
}
