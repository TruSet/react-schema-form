{
  "path": "/interestTerms",
  "schema": {
    "type": "object",
    "title": "Interest Terms",
    "properties": {
      "interestTermsList": {
        "title": "Interest Terms",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "accrualBasis": {
              "title": "Accrual Basis",
              "type": "string",
              "enum": [
                null,
                "30/360",
                "30E/360 (Eurobond Basis)",
                "30E/360 (ISDA)",
                "Act/360",
                "Act/364",
                "Act/365 (Fixed)",
                "Act/365L",
                "Act/365NL",
                "Act/Act (AFB)",
                "Act/Act (ICMA)",
                "Act/Act (ISDA)"
              ]
            },
            "accrualDate": {
              "title": "Accrual Start Date",
              "type": "date"
            },
            "firstPaymentDate": {
              "title": "First Payment Date",
              "type": "date"
            },
            "fixedRate": {
              "title": "Fixed Interest Rate",
              "type": "number"
            },
            "floatingRateBenchmarksList": {
              "title": "Floating Rate Benchmarks",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "curveCurrency": {
                    "title": "Curve Currency",
                    "type": "string"
                  },
                  "curveName": {
                    "title": "Curve Name",
                    "type": "string"
                  },
                  "curvePoint": {
                    "title": "Curve Point",
                    "type": "string"
                  },
                  "description": {
                    "title": "Benchmark",
                    "type": "string"
                  }
                }
              }
            },
            "floatingRateCalculationAgent": {
              "title": "Floating Rate Calculation Agent",
              "type": "string"
            },
            "floatingRateCalculationBusinessDayConvention": {
              "title": "Floating Rate Calculation Business Day Convention",
              "type": "string",
              "enum": [
                null,
                "Floating Rate Convention",
                "Following",
                "Modified Following",
                "Nearest",
                "No Adjustment",
                "Preceding"
              ]
            },
            "floatingRateCalculationCalendar": {
              "title": "Floating Rate Calculation Calendar",
              "type": "string"
            },
            "floatingRateCalculationDateOffset": {
              "title": "Floating Rate Calculation Date Offset",
              "type": "integer"
            },
            "floatingRateCap": {
              "title": "Floating Rate Cap",
              "type": "number"
            },
            "floatingRateFloor": {
              "title": "Floating Rate Floor",
              "type": "number"
            },
            "floatingRateFormulaDescription": {
              "title": "Floating Rate Formula",
              "type": "string"
            },
            "floatingRateMultiplier": {
              "title": "Floating Rate Multiplier",
              "type": "number"
            },
            "floatingRateResetFrequency": {
              "title": "Floating Rate Reset Frequency",
              "type": "string",
              "enum": [
                null,
                "Annual",
                "Monthly",
                "Quarterly",
                "SemiAnnual"
              ]
            },
            "floatingRateSpread": {
              "title": "Floating Rate Spread",
              "type": "number"
            },
            "lastPaymentDate": {
              "title": "Last Payment Date",
              "type": "date"
            },
            "paymentBusinessDayConvention": {
              "title": "Payment Business Day Convention",
              "type": "string",
              "enum": [
                null,
                "Floating Rate Convention",
                "Following",
                "Modified Following",
                "Nearest",
                "No Adjustment",
                "Preceding"
              ]
            },
            "paymentCalendar": {
              "title": "Payment Calendar",
              "type": "string"
            },
            "paymentFrequency": {
              "title": "Payment Frequency",
              "type": "string",
              "enum": [
                null,
                "Annual",
                "Monthly",
                "Quarterly",
                "SemiAnnual"
              ]
            },
            "periodEnd": {
              "title": "Period End",
              "type": "date"
            },
            "periodStart": {
              "title": "Period Start",
              "type": "date"
            },
            "rateType": {
              "title": "Interest Rate Type",
              "type": "string",
              "enum": [
                null,
                "Fixed",
                "Floating"
              ]
            },
            "regularPaymentsList": {
              "title": "Regular Payment Dates",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "day": {
                    "title": "Day",
                    "type": "integer"
                  },
                  "month": {
                    "title": "Month",
                    "type": "string",
                    "enum": [
                      null,
                      "April",
                      "August",
                      "December",
                      "February",
                      "January",
                      "July",
                      "June",
                      "March",
                      "May",
                      "November",
                      "October",
                      "September"
                    ]
                  }
                }
              }
            },
            "scheduledPaymentDatesList": {
              "title": "Scheduled Payment Dates",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": {
                    "title": "Payment Date",
                    "type": "date"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "form": [
    {
      "type": "fieldset",
      "items": [
        {
          "key": "interestTermsList",
          "add": "New Coupon",
          "style": {
            "add": "interestTermsList"
          },
          "items": [
            "interestTermsList[].periodEnd",
            {
              "type": "fieldset",
              "title": "Floating Rate Terms",
              "items": [
                "interestTermsList[].floatingRateFormulaDescription",
                "interestTermsList[].floatingRateSpread",
                "interestTermsList[].floatingRateCap",
                "interestTermsList[].floatingRateFloor",
                "interestTermsList[].floatingRateMultiplier",
                "interestTermsList[].floatingRateResetFrequency",
                "interestTermsList[].floatingRateCalculationBusinessDayConvention",
                "interestTermsList[].floatingRateCalculationCalendar",
                "interestTermsList[].floatingRateCalculationDateOffset",
                "interestTermsList[].floatingRateCalculationAgent"
              ]
            },
            "interestTermsList[].periodStart",
            "interestTermsList[].rateType",
            "interestTermsList[].fixedRate",
            "interestTermsList[].accrualBasis",
            "interestTermsList[].accrualDate",
            "interestTermsList[].paymentFrequency",
            "interestTermsList[].paymentBusinessDayConvention",
            "interestTermsList[].paymentCalendar",
            "interestTermsList[].firstPaymentDate",
            "interestTermsList[].lastPaymentDate",
            {
              "type": "fieldset",
              "items": [
                {
                  "key": "interestTermsList[].regularPaymentsList",
                  "add": "New Payment Date",
                  "style": {
                    "add": "interestTermsList[].regularPaymentsList"
                  },
                  "items": [
                    "interestTermsList[].regularPaymentsList[].day",
                    "interestTermsList[].regularPaymentsList[].month"
                  ]
                }
              ]
            },
            {
              "type": "fieldset",
              "items": [
                {
                  "key": "interestTermsList[].scheduledPaymentDatesList",
                  "add": "New Payment Date",
                  "style": {
                    "add": "interestTermsList[].scheduledPaymentDatesList"
                  },
                  "items": [
                    "interestTermsList[].scheduledPaymentDatesList[].date"
                  ]
                }
              ]
            },
            {
              "type": "fieldset",
              "items": [
                {
                  "key": "interestTermsList[].floatingRateBenchmarksList",
                  "add": "New Benchmark",
                  "style": {
                    "add": "interestTermsList[].floatingRateBenchmarksList"
                  },
                  "items": [
                    "interestTermsList[].floatingRateBenchmarksList[].description",
                    "interestTermsList[].floatingRateBenchmarksList[].curvePoint",
                    "interestTermsList[].floatingRateBenchmarksList[].curveCurrency",
                    "interestTermsList[].floatingRateBenchmarksList[].curveName"
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
