{
  "path": "/offerings",
  "schema": {
    "type": "object",
    "title": "Offer Details",
    "properties": {
      "issuancesList": {
        "title": "Issuances",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "capitalRaisedAmount": {
              "title": "Capital Raised Amount",
              "type": "number"
            },
            "capitalRaisedCurrency": {
              "title": "Capital Raised Currency",
              "type": "string"
            },
            "issueDate": {
              "title": "Issue Date",
              "type": "date"
            },
            "issuePrice": {
              "title": "Issue Price",
              "type": "number"
            },
            "issuePriceCurrency": {
              "title": "Issue Price Currency",
              "type": "string"
            },
            "offeringDocumentsList": {
              "title": "Offering Documents",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": {
                    "title": "Offering Document Date",
                    "type": "date"
                  },
                  "isSecurityProspectus": {
                    "title": "Is Prospectus",
                    "type": "boolean"
                  },
                  "type": {
                    "title": "Offering Document Type",
                    "type": "string"
                  },
                  "URL": {
                    "title": "URL",
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "originalIssueCurrency": {
        "title": "Currency",
        "type": "string"
      },
      "originalIssueDate": {
        "title": "Issue Date",
        "type": "date"
      },
      "originalIssuePrice": {
        "title": "Issue Price",
        "type": "number"
      }
    }
  },
  "form": [
    {
      "type": "fieldset",
      "items": [
        "originalIssueDate",
        "originalIssuePrice",
        "originalIssueCurrency"
      ]
    },
    {
      "type": "fieldset",
      "items": [
        {
          "key": "issuancesList",
          "add": "New Issuance",
          "style": {
            "add": "issuancesList"
          },
          "items": [
            "issuancesList[].issueDate",
            "issuancesList[].issuePrice",
            "issuancesList[].issuePriceCurrency",
            "issuancesList[].capitalRaisedAmount",
            "issuancesList[].capitalRaisedCurrency",
            {
              "type": "fieldset",
              "items": [
                {
                  "key": "issuancesList[].offeringDocumentsList",
                  "add": "New Document",
                  "style": {
                    "add": "issuancesList[].offeringDocumentsList"
                  },
                  "items": [
                    "issuancesList[].offeringDocumentsList[].isSecurityProspectus",
                    "issuancesList[].offeringDocumentsList[].URL",
                    "issuancesList[].offeringDocumentsList[].type",
                    "issuancesList[].offeringDocumentsList[].date"
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
